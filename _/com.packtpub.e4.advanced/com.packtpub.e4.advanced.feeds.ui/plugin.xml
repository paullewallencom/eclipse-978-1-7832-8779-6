<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.packtpub.e4.advanced.feeds.ui.category"
            name="Feeds">
      </category>
      <wizard
            category="com.packtpub.e4.advanced.feeds.ui.category"
            class="com.packtpub.e4.advanced.feeds.ui.NewFeedWizard"
            icon="icons/full/etool16/newfeed_wiz.gif"
            id="com.packtpub.e4.advanced.feeds.ui.newFeedWizard"
            name="New Feed">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="com.packtpub.e4.advanced.feeds.ui.FeedContentProvider"
            id="com.packtpub.e4.advanced.feeds.ui.feedNavigatorContent"
            labelProvider="com.packtpub.e4.advanced.feeds.ui.FeedLabelProvider"
            name="Feed Navigator Content">
         <triggerPoints>
               <and>
                  <instanceof
                        value="org.eclipse.core.resources.IResource">
                  </instanceof>
                  <test
                        forcePluginActivation="true"
                        property="org.eclipse.core.resources.extension"
                        value="feeds">
                  </test>
               </and>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="com.packtpub.e4.advanced.feeds.Feed">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="com.packtpub.e4.advanced.feeds.ui.feedNavigatorContent">
            </contentExtension>
            <contentExtension pattern="com.packtpub.e4.advanced.feeds.ui.FeedLinkHelper"/>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.packtpub.e4.advanced.feeds.ui.ShowFeedInBrowserHandler"
            description="Shows the selected feed in browser"
            id="com.packtpub.e4.advanced.feeds.ui.ShowFeedInBrowserCommand"
            name="Show Feed in Browser">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
         <command
               commandId="com.packtpub.e4.advanced.feeds.ui.ShowFeedInBrowserCommand"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <adapt
                           type="com.packtpub.e4.advanced.feeds.Feed">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.packtpub.e4.advanced.feeds.ui.ShowFeedItemInBrowserHandler"
            description="Shows the selected feed item in browser"
            id="com.packtpub.e4.advanced.feeds.ui.ShowFeedItemInBrowserCommand"
            name="Show Feed Item in Browser">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu">
         <command
               commandId="com.packtpub.e4.advanced.feeds.ui.ShowFeedItemInBrowserCommand"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <adapt
                           type="com.packtpub.e4.advanced.feeds.FeedItem">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.linkHelper">
      <linkHelper
            class="com.packtpub.e4.advanced.feeds.ui.FeedLinkHelper"
            id="com.packtpub.e4.advanced.feeds.ui.FeedLinkHelper">
         <editorInputEnablement>
            <instanceof
                  value="org.eclipse.ui.IFileEditorInput">
            </instanceof></editorInputEnablement>
         <selectionEnablement>
            <instanceof
                  value="com.packtpub.e4.advanced.feeds.Feed">
            </instanceof>
         </selectionEnablement>
      </linkHelper>
   </extension>
</plugin>
